<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="de.diedavids.cuba.instantlauncher.web.screens.launchercommandgroup.LauncherCommandGroupBrowse"
        focusComponent="launcherCommandGroupsTable"
        lookupComponent="launcherCommandGroupsTable"
        messagesPack="de.diedavids.cuba.instantlauncher.web.screens.launchercommandgroup">
    <dsContext>
        <groupDatasource id="launcherCommandGroupsDs"
                         class="de.diedavids.cuba.instantlauncher.entity.LauncherCommandGroup"
                         view="_local">
            <query>
                <![CDATA[select e from ddcil$LauncherCommandGroup e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="launcherCommandGroupsTable"
            spacing="true">
        <filter id="filter"
                applyTo="launcherCommandGroupsTable"
                datasource="launcherCommandGroupsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="launcherCommandGroupsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="code"/>
            </columns>
            <rows datasource="launcherCommandGroupsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="launcherCommandGroupsTable.create"/>
                <button id="editBtn"
                        action="launcherCommandGroupsTable.edit"/>
                <button id="removeBtn"
                        action="launcherCommandGroupsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
